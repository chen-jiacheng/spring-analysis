<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="simpleBean" class="com.chenjiacheng.spring.beans.bean.basic.SimpleBean"/>

    <bean id="propertiesBean" class="com.chenjiacheng.spring.beans.bean.basic.PropertiesBean">
        <property name="name" value="properties"/>
    </bean>

    <bean id="constructorBean" class="com.chenjiacheng.spring.beans.bean.basic.PropertiesBean">
        <constructor-arg index="0" value="constructorBean"/>
    </bean>


</beans>